@model IEnumerable<drc.Models.UnidadeMedidaVM>

@{
    ViewData["Title"] = "Unidade de Medida";
}

<div id="page1">

    <a class="btn btn-success" asp-controller="UnidadeMedida" asp-action="Cadastrar" style="float:right;margin-bottom:30px;">Cadastrar Unidade de Medida <i class="bi bi-check"></i></a>
    <br />
    <div class="col-md-12">
        <h1 class="text-center fsize-22 m-b-xl" style="line-height: 1.4em;">Unidade de Medida</h1>
    </div>
    <br />



    <table id="table" class="display">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sigla</th>
                <th style="text-align:right;">Ações &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Sigla</td>
                    <td>
                        <a class="btn btn-danger excluir" data-id="@p.Id" data-tipo="UnidadeMedidas" style="float:right;margin-left:10px; color: #fff"><i class="bi-x-circle"></i></a><!--Excluir-->
                        <a class="btn btn-warning" asp-controller="UnidadeMedida" asp-action="Editar" asp-route-id="@p.Id" style="float:right;margin-left:10px; color: #fff;"><i class="bi-pencil-square"></i></a><!--Editar-->
                        <a class="btn btn-primary visu" data-id="@p.Id" data-tipo="UnidadeMedidas" style="float:right; color: #fff;"><i class="bi bi-eye"></i></a><!--Visualizar-->
                
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="page2" style="display:none;">
    <div>
        <a class="btn btn-primary" id="voltar" style="float:right;margin-bottom:30px; color: #fff;"><i class="bi bi-arrow-return-left"></i></a>
    </div>

    <div class="conteudo" style="font-size: 18px; margin-top: 5vh;">
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Sigla</th>
                    <th>Data de Cadastro</th>
                    <th>Última Alteração</th>
                </tr>
            </thead>
            <tbody>
               <tr>
                   <td id="Prod_Nome"></td>
                   <td id="Prod_Sigla"></td>
                   <td id="Prod_Data_Cadastro"></td>
                   <td id="Prod_Data_Alteracao"></td>
               </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/js/unidademedida.js"></script>
}