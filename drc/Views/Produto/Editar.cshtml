@model drc.Models.ProdutoVM
@{
    ViewData["Title"] = "Atualizar Produto";
}

<style>
    #formContent {
        max-width: none;
        width: 80%;
    }

    input {
        box-shadow: 0px 2px 5px 1px #d7d7d7;
    }

    select {
        box-shadow: 0px 2px 5px 1px #d7d7d7;
    }

    hr {
        height: 2px;
        background: black;
        background: -webkit-gradient(linear, 0 0, 100% 0, from(white), to(white), color-stop(50%, black));
    }



    .text-danger {
        margin-top: 10px;
        float: left;
        font-size: 12px;
        margin-left: 11%;
    }

    .flex {
        display: flex;
        flex-direction: column;
    }

    .validation {
        float: left;
    }

    label {
        margin-left: 6%;
    }
</style>

<link rel="stylesheet" href="~/css/cadastro.css" />

    @using (Html.BeginForm(FormMethod.Post, new { @name="Editar" }))
    {
        <div class="panel">
        <div class="col-md-12">
            <h1 class="text-center fsize-22 m-b-xl" style="line-height: 1.4em;">Cadastro de Produto</h1>
        </div>
            @Html.TextBoxFor(model => model.Id, new { @type="hidden"})
            @Html.TextBoxFor(model => model.Ativo, new { @type="hidden"})
            @Html.TextBoxFor(model => model.Data_Cadastro, new { @type="hidden"})
            @Html.TextBoxFor(model => model.Nome, new { @class = "fadeIn second", @placeholder="Nome do produto"})

            <br />
            <br />
            @Html.TextBoxFor(model => model.Valor_Compra, new { @class = "fadeIn second", @placeholder="Valor de Compra", @onkeypress="$(this).mask('#.##0,00', {reverse: true});"})

            <br />
            <br />
            @Html.TextBoxFor(model => model.Valor_Venda, new { @class = "fadeIn second", @placeholder="Valor de Venda", @onkeypress="$(this).mask('#.##0,00', {reverse: true});"})

            <br />
            <select name="CategoriaID" id="categoriaID" class="fadeIn second">
                <option value="0" selected>- Selecione a categoria -</option>
                @foreach (var c in ViewBag.Categoria)
                {
                    @if (Model.CategoriaID == c.Id)
                    {
                        <option value="@c.Id" selected>@c.Nome</option>
                    }
                    else
                    {
                        <option value="@c.Id">@c.Nome</option>
                    }
                }
                
            </select>

        <br />
        <select name="UnidadeMedidaID" id="unidadeID" class="fadeIn second">
            <option value="0" selected>- Selecione a unidade de medida -</option>
            @foreach (var c in ViewBag.Categoria)
            {
                @if (Model.UnidadeMedidaID == c.Id)
                {
                    <option value="@c.Id" selected>@c.Nome</option>
                }
                else
                {
                    <option value="@c.Id">@c.Nome</option>
                }
            }

        </select>

        <select name="Status" id="Status" class="fadeIn second">
                @if (Model.Status == true)
                {
                    <option value="true" selected>Ativado</option>
                    <option value="false">Desativado</option>
                }
                else
                {
                    <option value="true">Ativado</option>
                    <option value="false" selected>Desativado</option>
                }
            }

        </select>
        </div>
            


        <input type="submit" class="fadeIn fourth" id="valida" data-tipo="produtos" value="Atualizar Produto" style="width:80%; margin-left:10%;">
    }


@section scripts{
    <script src="~/js/produto.js"></script>
}